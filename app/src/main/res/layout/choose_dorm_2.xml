<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cd2_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="姓名"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dbdbdb" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/cd2_id"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="学号"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dbdbdb" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/cd2_gender"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="性别"
                    android:textSize="20dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#e4e4e4"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="剩余床位信息"
                android:textAlignment="center"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/cd2_building5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="5号楼"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/cd2_building13"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="13号楼"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dbdbdb" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/cd2_building14"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="14号楼"
                    android:textSize="20dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#e4e4e4"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="选择目标宿舍楼"
                android:textAlignment="center"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <Spinner
                    android:id="@+id/spinner_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:entries="@array/buildings"
                    android:paddingLeft="8dp"
                    android:spinnerMode="dialog"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="目标宿舍楼"
                    android:textSize="20dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#e4e4e4"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="同住人信息"
                android:textAlignment="center"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/cd2_id1"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:paddingLeft="80dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="学号"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <EditText
                    android:id="@+id/cd2_vcode1"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:paddingLeft="80dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="校验码"
                    android:textSize="20dp" />
            </RelativeLayout>


            <Button
                android:id="@+id/ensure_button_2"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>