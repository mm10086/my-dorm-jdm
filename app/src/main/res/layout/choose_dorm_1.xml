<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/cd1_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:textAlignment="textEnd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text="姓名"
                android:textSize="20dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/cd1_id"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:textAlignment="textEnd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text="学号"
                android:textSize="20dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/cd1_gender"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:textAlignment="textEnd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text="性别"
                android:textSize="20dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="#e4e4e4"
            android:paddingLeft="8dp"
            android:gravity="center"
            android:text="剩余床位信息"
            android:textSize="20dp"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/cd1_building5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:textAlignment="textEnd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text="5号楼"
                android:textSize="20dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/cd1_building13"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:textAlignment="textEnd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text="13号楼"
                android:textSize="20dp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/cd1_building14"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:textAlignment="textEnd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text="14号楼"
                android:textSize="20dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="#e4e4e4"
            android:paddingLeft="8dp"
            android:gravity="center"
            android:text="选择目标宿舍楼"
            android:textSize="20dp"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp">
            <Spinner
                android:id="@+id/spinner_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:entries="@array/buildings"
                android:spinnerMode="dialog"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:textAlignment="viewEnd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text="目标宿舍楼"
                android:textSize="20dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/ensure_button"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>